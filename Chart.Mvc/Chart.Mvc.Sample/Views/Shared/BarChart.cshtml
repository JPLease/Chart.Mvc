@using Chart.Mvc.Options
@using Chart.Mvc.Options.Scale
@{
    const string Canvas = "BarChart";
    var complexChart = new BarChart();
    complexChart.ComplexData.Labels.AddRange(FakeComplexChartData.Labels);
    complexChart.ComplexData.Datasets.AddRange(FakeComplexChartData.BarChartDatasets);
    complexChart.ChartConfiguration.Tooltips = new TooltipsOptions
    {
        Enabled = true
    };
    complexChart.ChartConfiguration.Scales = new ScalesOptions
    {
        YAxes = new List<ScaleOptions>
        {
            new LogarithmicScaleOptions()
        }
    };

}
<h3>@Canvas</h3>
<canvas id="@Canvas" width="400" height="400"></canvas>

@Html.CreateChart(Canvas, complexChart)